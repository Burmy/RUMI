<form class="form-center" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
    <fieldset class="grid-form shadow">
        <img src="/public/images/taiwan-view.jpg" class="grid-lside grid-stretch" />
        <label class="grid-start grid-end content" for="username-input">Username</label>
        <input class="grid-stretch content" id="username-input" name="username" placeholder="enter your username" required
            type="text" />
        <label class="grid-start grid-end content" for="password-input">Password</label>
        <input class="grid-stretch content" id="password-input" name="password" placeholder="enter your password" required
            type="password" />
        <button id="login-btn" class="grid-center content" type="submit">Login</button>
        <button id="login-cancel-btn" class="grid-center content" type="reset">Reset</button>
        <div class="grid-start content">Don't have an account? <a href="/users/registration">Register</a></div>
    </fieldset>
</form>